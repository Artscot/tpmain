@model tpme.Models.searchGameName
@{
    ViewBag.Title = "TP-ME";
}

@using (Html.BeginForm("GET", "Game", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
