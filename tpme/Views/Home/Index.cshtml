    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.gameName, new { @class = "gamename", @id = "gamename1" })
            <input type="submit" onclick="location.href='@Url.Action("Chat", "Home")'" class="searchGame" value="GO" />   
        </div>
        <div class="col-sm-2">
            
            
        </div>
    </div>
</div>
}
